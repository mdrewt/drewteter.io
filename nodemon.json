{
  "verbose": true,
  "ext": "ts, js, json",
  "delay": 1000,
  "watch": ["*.ts", "*.js", "*.json"],
  "execMap": {
    "ts": "ts-node"
  },
  "env": {
    "NODE_ENV": "development"
  },
  "ignore": [
    ".git",
    ".tool-versions",
    "*.test.*",
    "www/",
    "resume/",
    "node_modules/"
  ]
}